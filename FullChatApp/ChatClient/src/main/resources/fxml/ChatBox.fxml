                </ImageView>
                <ImageView fx:id="sendButton" fitHeight="36.0" fitWidth="42.0" layoutX="414.0" layoutY="348.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/button.png" />
                    </image>
