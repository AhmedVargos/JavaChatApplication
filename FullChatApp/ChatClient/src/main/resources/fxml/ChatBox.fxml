                    </image>
                </ImageView>
                <ImageView fx:id="sendButton" fitHeight="35.0" fitWidth="38.0" layoutX="392.0" layoutY="336.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="/images/button.png" />
                    </image>
                </ImageView>
