                <ScrollPane prefHeight="290.0" prefWidth="575.0">
                    <content>
                        <VBox fx:id="chatVBox" prefHeight="284.0" prefWidth="570.0" />
                    </content>
                </ScrollPane>
                <AnchorPane fx:id="editHBox" layoutX="18.0" layoutY="295.0" prefHeight="27.0" prefWidth="539.0">
                    <children>
                        <ComboBox fx:id="fontFamily" layoutY="2.0" prefHeight="35.0" prefWidth="96.0" promptText=" Arial" />
                        <ComboBox fx:id="fontSize" layoutX="111.0" layoutY="2.0" prefHeight="35.0" prefWidth="96.0" promptText="15" />
