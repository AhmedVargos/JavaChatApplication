                <ScrollPane prefHeight="295.0" prefWidth="600.0">
                    <content>
                        <VBox fx:id="chatVBox" prefHeight="289.0" prefWidth="583.0" />
                    </content>
                </ScrollPane>
                <AnchorPane fx:id="editHBox" layoutX="31.0" layoutY="301.0" prefHeight="27.0" prefWidth="539.0">
                    <children>
                        <ComboBox fx:id="fontFamily" prefHeight="36.0" prefWidth="108.0" promptText=" Arial" />
